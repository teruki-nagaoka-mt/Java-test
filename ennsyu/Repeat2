public class Main {
    public static void main(String[] args) {
        System.out.println("1〜100の整数を入力してください。");
        int num;
        do {
            num = new java.util.Scanner(System.in).nextInt();
            if (num % 7 == 0) {
                System.out.println("処理を終了しました。");
                return;
            } else {
                System.out.println("1〜100の整数を入力してください。");
            }
        } while (true);
    }
}